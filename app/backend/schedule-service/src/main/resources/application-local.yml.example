# application-local.yml - 로컬 개발용 프로파일
# IDE에서 main()을 직접 실행할 때 사용 (반드시 .gitignore에 추가)
# docker-compose up으로 띄운 인프라(MySQL, LocalStack)에 접속합니다.

spring:
  datasource:
    # docker-compose.yml의 MySQL (호스트 포트 3307)
    url: jdbc:mysql://localhost:3307/schedule_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: unisync
    password: unisync_password

  jpa:
    hibernate:
      ddl-auto: update  # 개발 편의를 위한 자동 스키마 업데이트
    show-sql: true

# AWS Configuration (LocalStack)
aws:
  sqs:
    endpoint: http://localhost:4566
    region: ap-northeast-2
    queues:
      assignment-events: assignment-events-queue
      task-creation: task-creation-queue

# External Service URLs (로컬 개발)
services:
  user-service:
    url: http://localhost:8081
  course-service:
    url: http://localhost:8082

# Logging (상세 로깅)
logging:
  level:
    com.unisync: DEBUG
    org.springframework.web: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE
