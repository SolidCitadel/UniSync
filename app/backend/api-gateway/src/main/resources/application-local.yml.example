# application-local.yml - 로컬 개발용 프로파일
# IDE에서 main()을 직접 실행할 때 사용 (반드시 .gitignore에 추가)
# docker-compose up으로 띄운 인프라(LocalStack) 및 다른 서비스에 접속합니다.

# Service URLs (로컬 개발 - localhost)
services:
  user-service:
    url: http://localhost:8081
  course-service:
    url: http://localhost:8082
  schedule-service:
    url: http://localhost:8083

# AWS Cognito Configuration (LocalStack)
aws:
  cognito:
    user-pool-id: ap-northeast-2_XXXXXXXXX  # localstack-init 스크립트가 생성한 값으로 변경 필요
    region: ap-northeast-2
    endpoint: http://localhost:4566

# Logging (상세 로깅)
logging:
  level:
    com.unisync: DEBUG
    org.springframework.web: DEBUG
    org.springframework.cloud.gateway: DEBUG
