# application-local.yml - 로컬 개발용 프로파일
# IDE에서 main()을 직접 실행할 때 사용 (반드시 .gitignore에 추가)
# docker-compose up으로 띄운 인프라(MySQL, LocalStack)에 접속합니다.

spring:
  datasource:
    # docker-compose.yml의 MySQL (호스트 포트 3307)
    url: jdbc:mysql://localhost:3307/user_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: unisync
    password: unisync_password

  jpa:
    hibernate:
      ddl-auto: update  # 개발 편의를 위한 자동 스키마 업데이트
    show-sql: true

# AWS Configuration (LocalStack)
aws:
  region: ap-northeast-2
  credentials:
    access-key: test
    secret-key: test
  cognito:
    user-pool-id: ap-northeast-2_XXXXXXXXX  # localstack-init 스크립트가 생성한 값으로 변경 필요
    client-id: test-client-id
    region: ap-northeast-2
    endpoint: http://localhost:4566
  sqs:
    endpoint: http://localhost:4566
    region: ap-northeast-2
    queues:
      user-token-registered: user-token-registered-queue

# UniSync Configuration (로컬 테스트용 하드코딩)
unisync:
  encryption:
    key: IKhYmJOSJU6I9wLqNhfjr06vg6PeUsXLIRpwbcw3EF8=  # 로컬 테스트용
  api-keys:
    canvas-sync-lambda: test-canvas-sync-key

# Canvas Configuration
canvas:
  base-url: https://khcanvas.khu.ac.kr

# Logging (상세 로깅)
logging:
  level:
    com.unisync: DEBUG
    org.springframework.web: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE
